{
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "mapRoot": "./",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "out",
      "sourceMap": true,
      "target": "es2017",
      "lib": ["es2015", "dom"],
      "noImplicitAny": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node"
      ]
      
    },
    "exclude": [
      "node_modules",
      "out"
    ]
  }